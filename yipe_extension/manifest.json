{
    "manifest_version": 3,
    "name": "Yipe CRM Extension",
    "version": "1.2",
    "description": "Extensão para integração de etapas do funil de vendas no WhatsApp Web.",
    "permissions": ["activeTab", "storage", "contextMenus", "notifications", "https://api.yipecrm.com/"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://web.whatsapp.com/*"],
        "js": ["contentScript.js"],
        "css": ["styles.css"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.svg",
        "48": "images/icon16.svg",
        "128": "images/icon16.svg"
      }
    },
    "icons": {
      "16": "images/icon16.svg",
      "48": "images/icon16.svg",
      "128": "images/icon16.svg"
    }
  }
  